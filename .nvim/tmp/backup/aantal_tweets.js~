// initialize model(s)
require('../models/tweet');
var Tweet = mongoose.model('Tweet');

mongoose.connect('mongodb://localhost/vluchtelingen', {
    db:{safe: { j: 1, w: 0, wtimeout: 10000 }}
});

var verloop = {};
async.series([
    function(cb) {
        var verloop = {};
        Tweet.
            find().
            sort({"created_at": 1}).
            exec(function(err, tweets) {
                if (err) console.log(err);
                sum = 0
                R.forEach(function(tweet) {
                    date = new time.Date(tweet.created_at, 'Europe/Amsterdam');
                    hour = date.getHours();
                    dayOfMonth = date.getDate();
                    index = dayOfMonth + '_' + hour;
                    sum += 1;
                    if (!verloop[index]) {
                        verloop[index] = 0
                    }
                    verloop[index] += 1;

                }, tweets);
                R.forEach(function(hour) {
                    console.log(hour, verloop[hour]);
                }, R.range(0,24));
                console.log("total " + sum);
                cb();
            });
    },
    function(cb) {
        var verloop = {};
        Tweet.
            find().
            sort({"created_at": 1}).
            exec(function(err, tweets) {
                if (err) console.log(err);
                sum = 0
                R.forEach(function(tweet) {
                    date = new time.Date(tweet.created_at, 'Europe/Amsterdam');
                    hour = date.getHours();
                    dayOfMonth = date.getDate();
                    index = dayOfMonth + '_' + hour;
                    nr_followers = tweet['user']['followers_count']
                    sum += 1;
                    if (!verloop[index]) {
                        verloop[index] = 0;
                    }
                    verloop[index] += nr_followers;
                }, tweets);
                R.forEach(function(index) {
                    console.log(index, verloop[index]);
                }, R.keys(verloop));
                console.log("total " + sum);
                mongoose.disconnect();
            });
    }],
    function(err, results) {
        mongoose.disconnect();
    }
);

